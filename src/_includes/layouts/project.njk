---
layout: layouts/base.njk
section: project
---
<div class="page-container">
  <h1 class="text-5xl">
    {% if emoji %}
      <span class="project-card__emoji">{{ emoji }}</span>
    {% endif %}
    {{title}}</h1>
  <hr>
  {% if tags %}
    <p class="my-3">
      {% for tag in tags %}
        {%- if tag != "project" -%}
          {% set tagUrl %}/project-tags/{{ tag }}/{% endset %}
        <a class="tag hover:bg-gray-300" href="{{ tagUrl | url }}" rel="tag">{{ tag }}</a>
        {%- endif -%}
      {% endfor %}
    </p>
  {% endif %}
  {% if github %}
    <button href="{{ github }}" class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 my-3 rounded text-sm">
      View on GitHub
    </button>
  {% endif %}
  <div>
    {{ layoutContent | safe }}
  </div>
  <nav>
    <a href="{{ '/projects/' | url }}">‚Üê View All Projects</a>
  </nav>
</div>